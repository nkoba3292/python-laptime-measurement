{
    "name": "Raspberry Pi 5 - Lap Timer System",
    "host": "raspberrypi.local",
    "protocol": "sftp",
    "port": 22,
    "username": "pi",
    "remotePath": "/home/pi/laptime_system",
    "uploadOnSave": true,
    "downloadOnOpen": false,
    "ignore": [
        ".vscode/**",
        ".git/**",
        "node_modules/**",
        "__pycache__/**",
        "*.pyc",
        ".DS_Store",
        "*.log"
    ],
    "watcher": {
        "files": "**/*",
        "autoUpload": true,
        "autoDelete": false
    },
    "syncOption": {
        "delete": false,
        "skipCreate": false,
        "ignoreExisting": false,
        "update": true
    }
}